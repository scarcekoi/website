---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: --maroon-light;
    --aw-color-secondary: --red-light;
    --aw-color-accent: --mauve;

    --aw-color-text-heading:  rgb(76, 79, 105);
    --aw-color-text-default: rgb(92, 95, 119);
    --aw-color-text-muted: rgb(92, 95, 119 / 66%);
    --aw-color-bg-page: rgb(220, 224, 232);

    --aw-color-bg-page-dark: rgb(17, 17, 27);

    ::selection {
      background-color: --mauve-light;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: --maroon-dark;
    --aw-color-secondary: --red-dark;
    --aw-color-accent: --mauve-dark;

    --aw-color-text-heading: rgb(205, 214, 244);
    --aw-color-text-default: rgb(186, 194, 222);
    --aw-color-text-muted: rgb(186, 194, 222 / 66%);
    --aw-color-bg-page: rgb(17, 17, 27);

    ::selection {
      background-color: --mauve-dark;
      color: snow;
    }
  }
</style>
